<Window x:Class="StudentRegistry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Elektronikus Napló - Tanuló Nyilvántartás" Height="650" Width="900"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Margin="10" x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem Header="Új Tanuló Felvétele" FontSize="14" x:Name="TabUjTanulo">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Név:" FontWeight="Bold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtNev"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Születési hely:" FontWeight="Bold"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtSzulHely"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Születési idő:" FontWeight="Bold"/>
                        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="DpSzulIdo"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Anyja neve:" FontWeight="Bold"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtAnyja"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Lakcím:" FontWeight="Bold"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="TxtLakcim"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Beiratkozás:" FontWeight="Bold"/>
                        <DatePicker Grid.Row="5" Grid.Column="1" x:Name="DpBeiratkozas"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Szak:" FontWeight="Bold"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="CmbSzak">
                            <ComboBoxItem Content="Informatika"/>
                            <ComboBoxItem Content="Közgazdaság"/>
                            <ComboBoxItem Content="Kereskedelem"/>
                            <ComboBoxItem Content="Turizmus"/>
                        </ComboBox>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Osztály:" FontWeight="Bold"/>
                        <ComboBox Grid.Row="7" Grid.Column="1" x:Name="CmbOsztaly">
                            <ComboBoxItem Content="9.A"/>
                            <ComboBoxItem Content="9.B"/>
                            <ComboBoxItem Content="10.A"/>
                            <ComboBoxItem Content="10.B"/>
                            <ComboBoxItem Content="11.A"/>
                            <ComboBoxItem Content="11.B"/>
                            <ComboBoxItem Content="12.A"/>
                            <ComboBoxItem Content="12.B"/>
                            <ComboBoxItem Content="13.A"/>
                        </ComboBox>

                        <CheckBox Grid.Row="8" Grid.Column="1" x:Name="ChkKollegista" 
                                  Content="Kollégista" FontWeight="Bold"
                                  Checked="ChkKollegista_Checked" Unchecked="ChkKollegista_Unchecked"/>

                        <TextBlock Grid.Row="9" Grid.Column="0" Text="Kollégium:" FontWeight="Bold"/>
                        <ComboBox Grid.Row="9" Grid.Column="1" x:Name="CmbKollegium" IsEnabled="False">
                            <ComboBoxItem Content="Bocskai István Kollégium"/>
                            <ComboBoxItem Content="Bethlen Gábor Kollégium"/>
                            <ComboBoxItem Content="Medgyessy Ferenc Kollégium"/>
                        </ComboBox>

                        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" Margin="0,20,0,0">
                            <Button x:Name="BtnMentes" Content="Mentés" Width="120" Click="BtnMentes_Click"/>
                        </StackPanel>

                        <TextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                                   x:Name="TxtStatus" Foreground="Green" FontWeight="Bold" 
                                   Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Admin" FontSize="14" x:Name="TabAdmin">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="BtnFrissites" Content="Frissítés" Width="120" Click="BtnFrissites_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="DgTanulok" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              AlternatingRowBackground="#F9F9F9"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Napló sz." Binding="{Binding NaploSorszam}" Width="80"/>
                            <DataGridTextColumn Header="Törzslap sz." Binding="{Binding TorzslapSzam}" Width="90"/>
                            <DataGridTextColumn Header="Név" Binding="{Binding Nev}" Width="150"/>
                            <DataGridTextColumn Header="Szül. hely" Binding="{Binding SzuletesiHely}" Width="120"/>
                            <DataGridTextColumn Header="Szül. idő" Binding="{Binding SzuletesiIdo, StringFormat=yyyy.MM.dd}" Width="100"/>
                            <DataGridTextColumn Header="Beiratkozás" Binding="{Binding BeiratkozasIdopontja, StringFormat=yyyy.MM.dd}" Width="100"/>
                            <DataGridTextColumn Header="Osztály" Binding="{Binding Osztaly}" Width="70"/>
                            <DataGridTextColumn Header="Szak" Binding="{Binding Szak}" Width="120"/>
                            <DataGridCheckBoxColumn Header="Kollégista" Binding="{Binding Kollegista}" Width="80"/>
                            <DataGridTemplateColumn Header="Műveletek" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Törlés" Background="#F44336" 
                                                Click="BtnTorles_Click" Tag="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" x:Name="TxtOsszesito" Margin="0,10,0,0" 
                               FontWeight="Bold" TextWrapping="Wrap"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>